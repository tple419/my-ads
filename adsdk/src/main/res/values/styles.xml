<resources>
    <!-- Base application theme. -->

    <style name="AdAttributionView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FFCC66</item>
    </style>
    <style name="ads_RatingBar_ads" parent="Theme.AppCompat">
        <item name="colorControlNormal">#C6C5C5</item>
        <item name="colorControlActivated">#4CAF50</item>
    </style>

    <style name="ads_RatingBar_ads2" parent="Theme.AppCompat">
        <item name="colorControlNormal">#DDDDDD</item>
        <item name="colorControlActivated">#4CAF50</item>
    </style>

    <style name="AdAttributionView2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#28BCFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">Ad</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
    </style>
</resources>